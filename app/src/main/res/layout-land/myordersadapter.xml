<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="#000"
                    android:fontFamily="sans-serif"
                    android:textSize="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Order Id:"/>
                <TextView
                    android:textColor="#000"
                    android:id="@+id/orderid"
                    android:fontFamily="sans-serif"
                    android:textSize="18dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10011"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:weightSum="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:layout_marginLeft="15dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="#000"
                        android:fontFamily="sans-serif"
                        android:textSize="18dp"
                        android:gravity="left|center"
                        android:text="From :"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                    <TextView
                        android:textColor="#000"
                        android:id="@+id/fromtext"
                        android:layout_marginTop="10dp"
                        android:textSize="13dp"
                        android:gravity="left|center"
                        android:text="Shop No 143,Bala Nagar."
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                    <TextView
                        android:textColor="#000"
                        android:id="@+id/seller_phone_number"
                        android:layout_marginTop="10dp"
                        android:textSize="13dp"
                        android:gravity="left|center"
                        android:text="Hyd TS_23"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />


                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="#000"
                        android:fontFamily="sans-serif"
                        android:textSize="18dp"
                        android:gravity="left|center"
                        android:text="To :"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                    <TextView
                        android:textColor="#000"
                        android:id="@+id/totext"
                        android:layout_marginTop="10dp"
                        android:textSize="13dp"
                        android:gravity="left|center"
                        android:text="Shop No 143,Bala Nagar."
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                    <TextView
                        android:textColor="#000"
                        android:id="@+id/celler_phone_number"
                        android:layout_marginTop="10dp"
                        android:textSize="13dp"
                        android:gravity="left|center"
                        android:text="Hyd TS_23"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />


                </LinearLayout>



            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_weight="3"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/delivery_status"
                    android:layout_margin="10dp"
                    android:layout_weight="0.8"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:background="@drawable/acceptbackground"
                    android:text=""
                    android:layout_width="0dp"
                    android:layout_height="35dp" />
                <TextView
                    android:id="@+id/view_orders"
                    android:layout_margin="10dp"
                    android:layout_weight="0.8"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:background="@drawable/viewbackground"
                    android:text="View"
                    android:layout_width="0dp"
                    android:layout_height="35dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>















