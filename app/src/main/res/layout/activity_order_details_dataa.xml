<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderDetailsDataa">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
        android:layout_marginBottom="60dp"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:scaleType="fitXY"
            android:src="@drawable/finding">
        </ImageView>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp">


        </LinearLayout>

        <LinearLayout
             android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_margin="8dp"
            android:layout_height="160dp">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/storelocator_clothing">
                </ImageView>

            </android.support.v7.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/border_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_margin="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="#000"
                        android:fontFamily="sans-serif"
                        android:textSize="18dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Order Id:"/>
                    <TextView
                        android:textColor="#000"
                        android:id="@+id/orderid"
                        android:fontFamily="sans-serif"
                        android:textSize="18dp"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10011"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:weightSum="1"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_weight="0.5"
                        android:layout_width="0dp"
                        android:layout_marginLeft="15dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textColor="#000"
                            android:fontFamily="sans-serif"
                            android:textSize="18dp"
                            android:gravity="left|center"
                            android:text="From :"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                        <TextView
                            android:textColor="#000"
                            android:id="@+id/fromtext"
                            android:layout_marginTop="10dp"
                            android:textSize="13dp"
                            android:gravity="left|center"
                            android:text="Shop No 143,Bala Nagar."
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                        <TextView
                            android:textColor="#000"
                            android:id="@+id/fromtext1"
                            android:layout_marginTop="10dp"
                            android:textSize="13dp"
                            android:gravity="left|center"
                            android:text="Hyd TS_23"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />


                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_weight="0.5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textColor="#000"
                            android:fontFamily="sans-serif"
                            android:textSize="18dp"
                            android:gravity="left|center"
                            android:text="To :"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                        <TextView
                            android:textColor="#000"
                            android:id="@+id/totext"
                            android:layout_marginTop="10dp"
                            android:textSize="13dp"
                            android:gravity="left|center"
                            android:text="Shop No 143,Bala Nagar."
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                        <TextView
                            android:textColor="#000"
                            android:id="@+id/totext1"
                            android:layout_marginTop="10dp"
                            android:textSize="13dp"
                            android:gravity="left|center"
                            android:text="Hyd TS_23"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />


                    </LinearLayout>



                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_weight="3"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView

                        android:layout_margin="10dp"
                        android:layout_weight="0.8"
                        android:gravity="center"
                        android:textColor="#fff"
                         android:visibility="invisible"
                        android:layout_width="0dp"
                        android:layout_height="35dp" />
                    <TextView
                        android:layout_margin="10dp"
                        android:layout_weight="0.8"
                        android:gravity="center"
                        android:textColor="#fff"
                        android:visibility="invisible"
                        android:layout_width="0dp"
                        android:layout_height="35dp" />
                    <TextView
                        android:layout_margin="10dp"
                        android:layout_weight="0.8"
                        android:gravity="center"
                        android:textColor="#fff"
                        android:background="@drawable/border_shape"
                        android:text="Delivered"
                        android:layout_width="0dp"
                        android:layout_height="35dp" />
                </LinearLayout>





            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>